<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:deviceIds="wear_round"
    android:id="@+id/reps_layout"
    android:background="@color/blue">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:id="@+id/top_bg"
        android:background="@color/red"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/rep_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        android:layout_above="@+id/text_layout"
        android:fontFamily="sans-serif-medium"
        android:paddingBottom="5dp"
        android:text="Representative"/>

    <RelativeLayout
        android:id="@+id/text_layout"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="@color/white"
        android:layout_below="@+id/top_bg"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:paddingLeft="38dp">

                <TextView
                    android:id="@+id/rep_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="sans-serif-medium"
                    android:textSize="16sp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/title"
                    android:text="Coming soon"/>

                <TextView
                    android:id="@+id/rep_party"
                    android:layout_below="@+id/rep_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:fontFamily="sans-serif"
                    android:textStyle="italic"
                    android:textColor="@color/text"
                    android:text="Coming soon"/>

            </RelativeLayout>


        </RelativeLayout>


    </RelativeLayout>

    <ImageView
        android:id="@+id/stars3"
        android:layout_below="@+id/text_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:src="@drawable/stars3"
        android:maxWidth="55dp"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:paddingTop="10dp"
        />

</RelativeLayout>